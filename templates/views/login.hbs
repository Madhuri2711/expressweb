<body>
    {{>header}}
    <!-- Start header -->
    <div class="all-page-title page-breadcrumb">

    </div>
    <!-- End header -->
    <!-- Start Login -->

    <main role="main">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-10 offset-sm-1 col-12 mt-5">
                    <div class="heading-title text-center">
                        <h2 style="font-size: 30px;margin-top:40px;">Login</h2>

                    </div>
                    <form action="" method="post">
                        <div class="row">
                            <div class="col-12">

                                <div class="form-group">
                                    <label>User Name</label>
                                    <div class="input-group">

                                        <span class="input-group-addon"><i class="fa fa-user"></i> </span>
                                        <input type="text" placeholder="User Name" class="form-control" name="uname"
                                            required id="from_name">

                                    </div>

                                </div>


                            </div>
                            <div class="col-12 mt-2">
                                <div class="form-group ">
                                    <label>Password</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                        <input type="password" id="from_pass" class="form-control" name="pass" required
                                            placeholder="Password">
                                        <span class="input-group-addon"
                                            style="background-color: white;padding: 9.5px;"><i class="fa fa-eye"
                                                id="pass-status" onclick="viewpass()"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 mt-3">
                                <div class="submit-button text-center">
                                    <button class="btn btn-common" name="login" type="submit"
                                        style="margin-bottom: 20px;">Login</button>
                                    <div class="h3 text-center hidden"></div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <!-- End Login -->
    {{>footer}}
    <script type="text/javascript">
        function viewpass() {
            var passint = document.getElementById('from_pass');
            var passstust = document.getElementById('pass-status');
            if (passint.type == 'password') {
                passint.type = 'text';
                passstust.className = 'fa fa-eye-slash';
            }
            else {
                passint.type = 'password';
                passstust.className = 'fa fa-eye';
            }
        }
    </script>
